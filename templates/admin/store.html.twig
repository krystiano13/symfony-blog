{% extends 'base.html.twig' %}

{% block body %}
    <main class="w-[100vw] min-h-[100vh] bg-gray-50">
        {% if is_granted('ROLE_ADMIN') %}
            <div class="fixed z-50">
                {% include 'admin/partials/nav.html.twig' %}
            </div>
            <section id="form-wrapper" class="w-[100vw] h-screen flex justify-center items-center">
                <form
                        id="admin-form"
                        class="flex flex-col gap-4 bg-white p-8 pt-12 pb-12 rounded-xl w-80 md:w-96"
                        method="POST"
                        action="/admin/addpost"
                        enctype="multipart/form-data"
                >
                    <input class="outline-0 p-2 border-solid border-[1px] rounded-lg" required placeholder="title" type="text" name="title" />
                    <textarea class="outline-0 p-2 border-solid border-[1px] rounded-lg min-h-32 max-h-64" required placeholder="description" name="description"></textarea>
                    <label>Image</label>
                    <input required accept=".jpg .png .webp .jpeg" type="file" name="image_file" />
                    <button
                            class="font-semibold p-2 rounded-xl text-white bg-emerald-500 hover:bg-emerald-600 transition-colors"
                            type="submit"
                    >
                        Add
                    </button>
                </form>
            </section>
        {% endif %}
    </main>
{% endblock %}